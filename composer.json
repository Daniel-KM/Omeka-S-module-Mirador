{
    "name": "daniel-km/omeka-s-module-mirador",
    "type": "omeka-s-module",
    "description": "Module for Omeka S: Integrates Mirador, an advanced viewer, in order to display one or multiple images, audio, and video, local or remote, via the IIIF standard.",
    "keywords": [
        "Omeka S",
        "Omeka S module",
        "viewer",
        "book",
        "digital library",
        "image comparison",
        "iiif"
    ],
    "license": "CECILL-2.1",
    "homepage": "https://gitlab.com/Daniel-KM/Omeka-S-module-Mirador",
    "authors": [
        {
            "name": "Daniel Berthereau",
            "email": "Daniel.packagist@Berthereau.net"
        }
    ],
    "support": {
        "issues": "https://gitlab.com/Daniel-KM/Omeka-S-module-Mirador/-/issues",
        "forum": "https://forum.omeka.org/"
    },
    "_require (not set until Omeka S merges PR #2412)": {
        "omeka/omeka-s": "^4.1",
        "daniel-km/omeka-s-module-common": "*"
    },
    "require": {
        "sempia/external-assets": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Mirador\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiradorTest\\": "tests/MiradorTest/"
        }
    },
    "config": {
        "allow-plugins": {
            "sempia/external-assets": true
        }
    },
    "extra": {
        "installer-name": "Mirador",
        "configurable": true,
        "external-assets": {
            "asset/vendor/mirador-2/": "https://github.com/Daniel-KM/Omeka-S-module-Mirador/releases/download/3.4.10/mirador-2.tar.gz",
            "asset/vendor/mirador-2-plugins/": "https://github.com/Daniel-KM/Omeka-S-module-Mirador/releases/download/3.4.10/mirador-2-plugins.tar.gz",
            "asset/vendor/mirador-3/": "https://github.com/Daniel-KM/Omeka-S-module-Mirador/releases/download/3.4.10/mirador-3.4.3.tar.gz",
            "asset/vendor/mirador/mirador.min.js": "https://unpkg.com/mirador@^4.0/dist/mirador.min.js",
            "asset/vendor/mirador-esm/": "https://github.com/Daniel-KM/Omeka-S-module-Mirador/releases/download/3.4.12/mirador-esm.tar.gz"
        }
    }
}
